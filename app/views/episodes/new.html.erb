<div class="container-fluid">
  <div class="row justify-content-center margin-below">
    <div class="col-xs-12 col-lg-6">
      <h1>Season <%= @season.season_number %></h1>
      <form action="<%= season_episodes_path(@episode.season.season_number) %>" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <div class="form-group row">
          <label class="col-sm-5 col-form-label" for="name">Episode Name:</label>
          <div class="col-sm-7">
            <input type="text" name="name" id="name">
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-5 col-form-label" for="week">Episode Week:</label>
          <div class="col-sm-7">
            <input type="number" step="1" name="week" id="week">
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-5 col-form-label" for="air_date">Air Date:</label>
          <div class="col-sm-7">
            <input type="date" name="air_date" id="air_date">
          </div>
        </div>
        <input type="hidden" name="season_id" value="<%= @season.id %>">
        <div class="col-sm-10">
          <button class="btn btn-primary" type="submit">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>